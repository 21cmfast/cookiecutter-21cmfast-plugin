# see https://editorconfig.org/
root = true

[*]
# Use Unix-style newlines for most files (except Windows files, see below).
end_of_line = lf
trim_trailing_whitespace = true
indent_style = space

# Things like specifying a charset will almost never cause problems,
# but might cause mysterious problems in obscure cases,
# so that's restricted to source-code files.
[*.{py,pyx,pxd}]
insert_final_newline = true
indent_size = 4
charset = utf-8

[*.{bat,cmd,ps1}]
end_of_line = crlf

[*.{yml,yaml}]
indent_size = 2
